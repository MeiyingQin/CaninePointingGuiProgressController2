<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.research.caninerobotstudy.userinterface"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/GridLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    grid:alignmentMode="alignBounds"
    grid:columnCount="1"
    tools:context=".Praise">

    <Button
        android:id="@+id/correctButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4fe48d"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"
        android:onClick="onClick"
        android:text="@string/praise_correct_button_name" />

    <Button
        android:id="@+id/wrongButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#e12932"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"
        android:onClick="onClick"
        android:text="@string/praise_wrong_button_name" />

</android.support.v7.widget.GridLayout>